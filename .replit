run = "bash build.sh && NODE_ENV=production npm start"
entrypoint = "server.js"
hidden = [".config", "package-lock.json"]

[nix]
channel = "stable-21_11"
enableFlow = true

[env]
NODE_ENV = "production"
PATH = "/home/runner/.npm-global/bin:/home/runner/${REPL_SLUG}/node_modules/.bin:${PATH}"

[packager]
language = "nodejs"

[packager.features]
packageSearch = true
guessImports = true
enabledForHosting = false

[unitTest]
language = "nodejs"

[languages.javascript]
pattern = "**/{*.js,*.jsx,*.ts,*.tsx}"
  [languages.javascript.languageServer]
  start = ["typescript-language-server", "--stdio"]

[deployment]
build = ["bash", "build.sh"]
run = ["npm", "start"]
deploymentTarget = "cloudrun"

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json"]

[onBoot]
command = "chmod +x build.sh && npm config set prefix /home/runner/.npm-global && npm install -g typescript"